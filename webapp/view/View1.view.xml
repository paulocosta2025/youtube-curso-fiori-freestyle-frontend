<mvc:View controllerName="br.com.petrobras.yspmtestenota.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <Button text="Hello World" press="onPress"></Button>

        <VBox class="sapUITinyMargin">
            <Label text="Nota"/>
            <Input />
        </VBox>

        <t:Table id="table1"
            rows="{/NotasPmSub}"
            visibleRowCount="10"
            threshold="10"
            class="sapUITinyMargin"
            selectionMode="MultiToggle">

            <t:toolbar>
                <OverflowToolbar>
                    <Title id="title" text="Notas"></Title>
                </OverflowToolbar>
            </t:toolbar>

            <t:columns>
                <t:Column width="4rem" sortProperty="Nota">
                    <Label text="Nota" />
                    <t:template>
                        <Text text="{Nota}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="10rem" sortProperty="SwerkUnidade" filterProperty="SwerkUnidade" autoResizable="true">
                    <Label text="Unidade" />
                    <t:template>
                        <Text text="{SwerkUnidade}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="10rem" sortProperty="Tplnr" filterProperty="Tplnr" autoResizable="true">
                    <Label text="Local instal." />
                    <t:template>
                        <Text text="{Tplnr}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="20rem" sortProperty="PltxtTplnr" filterProperty="PltxtTplnr" autoResizable="true">
                    <Label text="Descr. Tipo Nota" />
                    <t:template>
                        <Text text="{PltxtTplnr}" wrapping="false" />
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>
    </Page>
</mvc:View>