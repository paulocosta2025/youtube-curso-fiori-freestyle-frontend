<mvc:View controllerName="br.com.petrobras.yspmtestenota.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <Text core:require="{ formatMessage: 'sap/base/strings/formatMessage' }"
            text="{
                parts:[
                    {path:'i18n>welcomeMsg'},
                    {path:'/usuario/nome'}
                ],
                formatter: 'formatMessage'
            }"/>

        <Button text="Exibir Mensagem" press="onExibirMensagem"></Button>
    </Page>
</mvc:View>