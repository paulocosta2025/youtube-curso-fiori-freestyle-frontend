<mvc:View controllerName="br.com.petrobras.yspmtestenota.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:t="sap.ui.table"
	xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <VBox class="sapUiTinyMargin">
            <Label text="Model padrão da view (origem: controller)"/>
            <Text text="{/usuario/nome}"/>

            <Text text="----------------------------------------------------"/>

            <Label text="Model 'dados' da view (origem: controller)"/>
            <Text text="{dados>/usuario/nome}"/>

            <Text text="----------------------------------------------------"/>

            <Label text="Model i18n - chave title (origem: manifest)"/>
            <Text text="{i18n>title}"/>

            <Text text="----------------------------------------------------"/>

            <Label text="Model 'usuarios' (origem: manifest)"/>
            <Text text="{usuarios>/0/id} - {usuarios>/0/nome}"/>

            <Text text="----------------------------------------------------"/>

            <Label text="Model padrão do serviço (origem: manifest)"/>
            <List headerText="Notas" items="{ path: '/NotasPmSub' }" >
                <StandardListItem title="Nota {Nota}" description="{DescTipoNota}"/>
            </List>
            
            <Text text="{/NotasPmSub('1015')/Nota} - {/NotasPmSub('1015')/DescTipoNota}"/>

            <Text text="----------------------------------------------------"/>

            <Button text="Testar Models" press="onTestModels"></Button>

        </VBox>
    </Page>
</mvc:View>